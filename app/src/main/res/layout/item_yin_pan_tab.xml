<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/yinpan_list_height"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="@dimen/yinpan_list_icon_length"
        android:layout_height="@dimen/yinpan_list_icon_length"
        android:padding="@dimen/yinpan_list_icon_padding"
        android:src="@mipmap/newtab"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/yinpan_list_title_size"
            android:text="1"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"/>
    </LinearLayout>

</LinearLayout>