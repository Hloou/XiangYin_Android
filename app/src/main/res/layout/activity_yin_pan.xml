<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.yinpan.YinPanActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height"
        android:gravity="center_vertical"
        android:background="@color/bg_gray"
        android:padding="@dimen/yinpan_top_widget_padding">
        <TextView
            android:id="@+id/tv_sort_name"
            android:layout_width="@dimen/yinpan_sort_button_width"
            android:layout_height="@dimen/yinpan_sort_button_height"
            android:text="@string/yinpan_name"
            android:gravity="center"
            android:background="@drawable/btn_sky_blue_rectangle_corner"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_sort_date"
            android:layout_width="@dimen/yinpan_sort_button_width"
            android:layout_height="@dimen/yinpan_sort_button_height"
            android:text="@string/yinpan_date"
            android:gravity="center"
            android:background="@drawable/btn_white_rectangle_corner"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/yinpan_top_widget_padding"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
